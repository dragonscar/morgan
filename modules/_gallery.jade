mixin gallery(id,numOfSlides)
  div(id=id class="carousel slide" data-ride="carousel")
    ol(class="carousel-indicators")
      if(numOfSlides > 1)
        - for (var index=0;index<numOfSlides;index++)
          if (index==0)
            li(data-target="#"+id data-slide-to=index class="active")
          else
            li(data-target="#"+id data-slide-to=index)

    div(class="carousel-inner" role="listbox")
      - for (var item=0;item<numOfSlides;item++)
        if (index==0)
          div(class="item active")
            img(src=id+"-gallery-"+item alt=id+"-gallery-"+item)
        else
          div(class="item")
            img(src=id+"-gallery-"+item alt=id+"-gallery-"+item)
    a(class="left carousel-control" href="#wedding-photography-carousel" role="button" data-slide="prev")
      span(class="glyphicon glyphicon-chevron-left" aria-hidden="true")
      span(class="sr-only") Previous
    a(class="left carousel-control" href="#wedding-photography-carousel" role="button" data-slide="next")
      span(class="glyphicon glyphicon-chevron-right" aria-hidden="true")
      span(class="sr-only") Next